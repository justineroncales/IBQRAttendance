@model IBQRAttendance.Models.GlobalClass
@{
    ViewBag.Title = "RegisteredList";
}
<style type="text/css">
    @@media (min-width: 301px ) {
        body {
            background-image: url('/Img/280668513_682904199485150_8543926658523506720_n.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
        }

        footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
        }
    }
</style>

@using (Html.BeginForm("RemoveFromList", "QRCode", FormMethod.Post))
{
    <div class="container" style="background-color: azure; width: 100%;">
        <h2>RegisteredList</h2>
        @Html.AntiForgeryToken()
        <br />
        <div style="width:100%; margin:0 auto;">
            <table id="RTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" height="80%" cellspacing="0">
                <thead>
                    <tr>
                        <th>FIRSTNAME</th>
                        <th>LASTNAME</th>
                        <th>MIDDLENAME</th>
                        <th>EMAIL</th>
                        <th>ADDRESS</th>
                        <th>PHONENUMBER</th>
                        <th>LEVEL</th>
                        <th>DEPARTMENT</th>
                        <th>QR CODE</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListUsers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelitem => item.FIRSTNAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.LASTNAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.MIDDLENAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.EMAIL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.ADDRESS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.PHONENUMBER)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item._LEVEL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item._DEPARTMENT)
                            </td>
                            <td>
                                <img src="@Html.DisplayFor(modelitem => item.URLPATH)" id="ImageID" />
                            </td>
                            <td>
                                <input type="submit" value="Remove" formaction=@Url.Action("RemoveFromList", new { USERID = item.USERID }) formmethod="POST" class="btn-danger" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/DataTables")
@Scripts.Render("~/Scripts/Tables.js")

